{
  "name": "github-repo-chat",
  "version": "1.0.0",
  "description": "Chat with GitHub repositories using AI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build && cp -r build ../",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "github",
    "ai",
    "chat",
    "repository",
    "openai"
  ],
  "author": "Your Name",
  "license": "MIT"
}